<div class="gap"><a href="javascript:void(0)" class="close_comment"><%= image_tag "close_popup.png"%></a></div>
<div id="com_for_<%=@article.id%>">
 <%=render :partial=>"index"%>
</div>
<%= form_for([@article,@comment], :remote => true) do |f| %>

  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%="Add Comment"%></br>
    <%= f.text_area :content , :rows=>2, :cols=>45%>
     
  </div>
  
  <div class="actions">
    <%= f.submit "Comment"%>
  </div>
<% end %>
<script>
$(document).ready(function(){
    $('.close_comment').click(function(){
        $('#comment_<%=@article.id%>').hide();
    });
});
</script>
